!!! 5
%html
  %head
    %title Seirenes 持ち込みカラオケ支援システム
    %meta{:content => "text/html;charset=UTF-8", "http-equiv" => "content-type"}/
    %meta{:content => "noindex,nofollow", :name => "robots"}/
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
    :coffee
      $ ->
        Seirenes.start(current_user: #{current_user.to_json})

  %body
    #site-title
      %h1
        %span> S
        eirenes

    - if notice
      .alert.alert-success
        %button.close{data: {dismiss: "alert"}} &times;
        = notice
    - if alert
      .alert.alert-error
        %button.close{data: {dismiss: "alert"}} &times;
        = alert

    #login
      - if current_user
        Logged in as #{current_user.screen_name}
        .dropdown
          %a.dropdown-toggle{href: "#", data: {toggle: "dropdown"}} メニュー
          %ul.dropdown-menu{role: "menu"}
            %li
              = link_to_twitter_auth
            %li
              = link_to_facebook_auth
            %li
              = link_to "ログアウト", logout_path
      - else
        .dropdown
          %a.dropdown-toggle{href: "#", data: {toggle: "dropdown"}} ログイン
          %ul.dropdown-menu{role: "menu"}
            %li
              %a{href: "/auth/twitter"} Twitter
            %li
              %a{href: "/auth/facebook"} Facebook
    #main
      %ul.nav
        %li
          = link_to "ホーム", root_path
        %li
          = link_to "お気に入り", favorites_path
        %li
          = link_to "予約確認", song_queues_path
        %li
          = link_to "りれき", histories_path
        %li
          = link_to "再生", player_path
        %li
          = link_to "録音", recordings_path

      %article.contents
        = yield

    %footer
      &copy; Tomohiro Hashidate
