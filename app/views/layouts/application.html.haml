!!! 5
%html
  %head
    %title Seirenes 持ち込みカラオケ支援システム
    %meta{:content => "text/html;charset=UTF-8", "http-equiv" => "content-type"}/
    %meta{:content => "noindex,nofollow", :name => "robots"}/
    - if current_user
      %meta{current_user: "#{current_user.to_json}"}
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
    :coffee
      $ ->
        $("img.thumb").lazyload
          effect : "fadeIn"

        $('#site-title h1').FontEffect
           gradient: true,
           gradientFromTop: true,
           gradientColor: "#AAA",
           gradientPosition: 20,
           gradientLength: 50,
           gradientSteps: 20

  %body
    #site-title
      %h1
        %span> S
        eirenes

    - if notice
      .alert.alert-success
        %button.close{data: {dismiss: "alert"}} &times;
        = notice
    - if alert
      .alert.alert-error
        %button.close{data: {dismiss: "alert"}} &times;
        = alert

    #login
      - if current_user
        Logged in as #{current_user.screen_name}
        .dropdown
          %a.dropdown-toggle{href: "#", data: {toggle: "dropdown"}} メニュー
          %ul.dropdown-menu{role: "menu"}
            %li
              = link_to_twitter_auth
            %li
              = link_to_facebook_auth
            %li
              = link_to "ログアウト", logout_path
      - else
        .dropdown
          %a.dropdown-toggle{href: "#", data: {toggle: "dropdown"}} ログイン
          %ul.dropdown-menu{role: "menu"}
            %li
              %a{href: "/auth/twitter"} Twitter
            %li
              %a{href: "/auth/facebook"} Facebook
    #main
      = yield

    %footer
      &copy; Tomohiro Hashidate
