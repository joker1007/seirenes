.pasokara
  .title
    = link_to pasokara.title, pasokara
    %button.btn.btn-primary 予約する
  .info-box
    .thumb
      = image_tag pasokara.thumbnail.url, width: 160, height: 120
    .inner-info-box
      .tag-box
        .info-type タグ
        .tag-list
          - pasokara.tags.each do |t|
            %span.info-tag
              = link_to t.name, url_for(filter_tags: params[:filter_tags].to_a + [t.name])
      .meta-info-box
        .info-type 動画情報
        .info-list
          .info-entity
            %span.info-key 再生時間:
            %span.info-value= pasokara.duration_str
          .info-entity
            %span.info-key ニコニコID:
            %span.info-value
              - if pasokara.nico_vid
                = pasokara.link_to_niconico
          .info-entity
            %span.info-key 投稿日:
            %span.info-value= pasokara.nico_posted_at.try(:strftime, "%Y/%m/%d %H:%M:%S")
          .info-entity
            %span.info-key 再生数:
            %span.info-value= pasokara.nico_view_count
          .info-entity
            %span.info-key> マイリスト数:
            %span.info-value= pasokara.nico_mylist_count
      .add-favorite
        %button.btn.btn-default.favorite お気に入りに追加する
